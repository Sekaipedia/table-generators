{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "./build",
    "removeComments": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
